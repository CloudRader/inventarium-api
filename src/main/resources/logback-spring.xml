<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <springProperty name="APP_NAME" source="spring.application.name"/>

    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder class="net.logstash.logback.encoder.LoggingEventCompositeJsonEncoder">

            <providers>

                <!-- Timestamp -->
                <timestamp>
                    <timeZone>UTC</timeZone>
                </timestamp>

                <!-- Log level -->
                <logLevel />

                <!-- Thread name -->
                <threadName />

                <!-- Logger name -->
                <loggerName />

                <!-- Message -->
                <message />

                <!-- Application name -->
                <pattern>
                    <pattern>
                        {
                        "app": "${APP_NAME}"
                        }
                    </pattern>
                </pattern>

                <!-- Stacktrace -->
                <stackTrace />

                <!-- MDC (Request ID, User ID, etc) -->
                <mdc />

            </providers>
        </encoder>
    </appender>

    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
    </root>

</configuration>